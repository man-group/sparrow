# sparrow-json-reader cmake module
# This module sets the following variables in your project::
#
#   sparrow-json-reader-reader_FOUND - true if sparrow found on the system
#   sparrow-json-reader_INCLUDE_DIRS - the directory containing sparrow headers
#   sparrow-json-reader_LIBRARY - empty

@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

find_dependency(sparrow)
find_dependency(nlohmann_json)

if(NOT TARGET sparrow::json_reader)
    include("${CMAKE_CURRENT_LIST_DIR}/@PROJECT_NAME@Targets.cmake")
    get_target_property(@PROJECT_NAME@_INCLUDE_DIRS sparrow::json_reader INTERFACE_INCLUDE_DIRECTORIES)
    get_target_property(@PROJECT_NAME@_LIBRARY sparrow::json_reader LOCATION)
endif()
